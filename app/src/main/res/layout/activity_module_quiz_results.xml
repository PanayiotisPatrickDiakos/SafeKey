<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuleQuizResultsActivity">

    <TextView
        android:id="@+id/res_results_label"
        android:layout_width="95dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="20dp"
        android:text="Results"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/res_results_value"
        android:layout_width="197dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="TextView"
        android:textSize="40dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/res_results_label"
        app:layout_constraintTop_toBottomOf="@+id/res_results_label" />

    <Button
        android:id="@+id/btn_res_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="@+id/txt_Congratuations"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/txt_Congratuations"
        app:layout_constraintTop_toBottomOf="@+id/res_xp_gained" />

    <TextView
        android:id="@+id/txt_Congratuations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/gilroy_heavy"
        android:text="Congratulations!"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="You completed the Module's Quiz"
        android:fontFamily="@font/gilroy_regular"
        app:layout_constraintStart_toStartOf="@+id/txt_Congratuations"
        app:layout_constraintTop_toBottomOf="@+id/txt_Congratuations" />

    <TextView
        android:id="@+id/res_xp_gained"
        android:layout_width="273dp"
        android:layout_height="126dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/gilroy_regular"
        android:gravity="center"
        android:text="XP Gained"
        android:textSize="50dp"
        android:background="@drawable/round_back_light_yellow10"
        app:layout_constraintEnd_toEndOf="@+id/res_results_value"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/res_results_value"
        app:layout_constraintTop_toBottomOf="@+id/res_results_value" />
</androidx.constraintlayout.widget.ConstraintLayout>