<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greywhite"
    tools:context=".SplashScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/reg_cardView"
        android:layout_width="159dp"
        android:layout_height="166dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="95dp"

        app:cardBackgroundColor="#00AAFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/reg_imageView"
            android:layout_width="119dp"
            android:layout_height="145dp"
            android:layout_gravity="center"

            app:srcCompat="@mipmap/sk_ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/reg_splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:text="@string/please_enter_in_your_new_username_and_password"
        android:textColor="@color/darkbue"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_splash_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:inputType="text"
        android:hint="@string/new_username"
        android:padding="10dp" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reg_username"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_baseline_key_24"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/reg_loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_password"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="1dp"
        android:padding="10dp"
        android:text="@string/sign_up"
        android:textSize="16sp"
        app:cornerRadius="50dp" />

</RelativeLayout>