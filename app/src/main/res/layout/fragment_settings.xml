<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_wave" />

    <TextView
        android:id="@+id/subscription_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="49dp"
        android:fontFamily="sans-serif-black"
        android:text="Subscriptions"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/subscribe_plans"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="108dp"
        android:text="@string/subscription_desc"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/subscription_plan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="232dp"
        android:fontFamily="sans-serif-black"
        android:text="Choose your plan"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/subscriptionOptionA"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/subscription_plan_header"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white10"
        android:elevation="20dp"
        android:text="Noob: AUD $0.50 per month" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/subscriptionOptionB"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/subscriptionOptionA"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white10"
        android:elevation="20dp"
        android:text="Professional: AUD $1.50 per month" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/subscriptionOptionC"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/subscriptionOptionB"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_white10"
        android:elevation="20dp"
        android:text="Blackhat: AUD $4.10 per month" />

    <Button
        android:id="@+id/subscriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subscriptionOptionC"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/rounded_buttons"
        android:elevation="20dp"
        android:text="Choose plan" />

</RelativeLayout>